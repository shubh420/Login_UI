<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:fitsSystemWindows="true"
 >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/jj"
        android:scaleType="centerCrop"
/>

    <ImageView
        android:id="@+id/id_fr_iv_of_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/twitter"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PGm Corp."
        android:layout_alignTop="@id/id_fr_iv_of_icon"
android:layout_marginTop="105dp"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:fontFamily="serif-monospace"/>



    <TextView
        android:id="@+id/id_fr_tv_log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:textSize="28sp"
android:fontFamily="monospace"
        android:textColor="#ffffff"
android:layout_above="@id/if_fr_ed_user_name"
        android:layout_marginBottom="23dp"
        android:layout_centerHorizontal="true"

        />


    <EditText
        android:id="@+id/if_fr_ed_user_name"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/textinputborder"
        android:hint="User Name"
        android:paddingLeft="10dp"
        android:inputType="textVisiblePassword"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        />

    <EditText
        android:id="@+id/if_fr_ed_psswrd"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/textinputborder"
        android:hint="Password"
        android:paddingLeft="10dp"
        android:inputType="textVisiblePassword"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
      android:layout_below="@id/if_fr_ed_user_name"
        android:layout_marginTop="15dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
android:background="@drawable/button_border"
        android:text="Log in"
        android:textColor="#ffffff"
        android:layout_below="@id/if_fr_ed_psswrd"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>